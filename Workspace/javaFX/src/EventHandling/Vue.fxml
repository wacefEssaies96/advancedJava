<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="EventHandling.Controller">
	<padding>
		<Insets top="30" right="30" bottom="30" left="30"></Insets>
	</padding>
	
	<TextArea fx:id="result"></TextArea> 
	<Button 
		text="insert"
		GridPane.rowIndex="2"
		GridPane.columnIndex="0"
		onAction="#insert">
	</Button>
	<Button 
		text="delete"
		GridPane.rowIndex="3"
		GridPane.columnIndex="0"
		onAction="#delete"
		>
	</Button>
	<Button 
		text="quit"
		GridPane.rowIndex="4"
		GridPane.columnIndex="0"
		onAction="#quit"
		>
	</Button>
	
</GridPane>

